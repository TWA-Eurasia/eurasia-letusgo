extends adminLayout

block title
  title 分类管理列表
block categories-management
  a.ui.link.item.active(href="/admin/categoriesManagement") 分类管理
block content
  .ui.grid.centered
    .sixteen.wide.column
      h1.ui.header.centered
        .content
          i.icon.browser
          .content 分类管理列表
  .ui.grid.centered
    .two.wide.column
      .ui.fluid.vertical.steps
        .step
          .content
            .title 商品服务分类
        .step
          .content
            a.title.can-click-step 一级分类
        .step
          .content
            a.title.can-click-step 二级分类
    .one.wide.column &nbsp;
    .eight.wide.column
      table.ui.table
        thead
          tr
            th
              span 类名
            th
              span 操作
            th
              a.ui.teal.button(href="/admin/categoriesManagement/addCategory") + 添 加 新 分 类
        - each mainCategory in mainCategories
          tbody
            tr(ng-repeat="appraise in vm.day_appraises")
              td
                span #{mainCategory.shortName}
              td
                .ui.positive.reset.button#modify-button 修改
                .ui.negative.submit.button#delete-button 删除
